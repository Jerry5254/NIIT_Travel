<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.travel.dao.scoreDao">
    <select id="queryScore" resultType="com.travel.travel.entity.score">
        SELECT  SCId,SCNote_id,SCUser_id,SCScore
        FROM score
        ORDER BY SCScore
        DESC
    </select>
    <select id="queryScoreByNote" resultType="com.travel.travel.entity.score">
        SELECT  SCId,SCNote_id,SCUser_id,SCScore
        FROM score
        WHERE
        SCNote_id=#{SCNote_id}
    </select>
    <insert id="insertScore" useGeneratedKeys="true" keyProperty="SCId"
            keyColumn="SCId" parameterType="com.travel.travel.entity.score">
        INSERT INTO
        score(SCNote_id,SCUser_id,SCScore)
        VALUES
        (#{SCNote_id},#{SCUser_id},#{SCScore})
    </insert>
    <select id="queryAvgScoreByNote" resultType="Integer">
        SELECT  AVG(SCScore)
        FROM score
        WHERE
        SCNote_id=#{SCNote_id}
    </select>
    <select id="queryScoreByUser" resultType="com.travel.travel.entity.score">
        SELECT  SCId,SCNote_id,SCUser_id,SCScore
        FROM score
        where
        SCUser_id=#{SCUser_id}
    </select>
</mapper>