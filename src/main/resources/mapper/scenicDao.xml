<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.travel.dao.scenicDao">
    <select id="queryScenic" resultType="com.travel.travel.entity.scenic">
        SELECT  SId,SName,SCity,SDes,SPic
        FROM scenic
        ORDER BY SId
        DESC
    </select>
    <select id="queryScenicByCity" resultType="com.travel.travel.entity.scenic">
        SELECT  SId,SName,SCity,SDes,SPic
        FROM scenic
        WHERE
        SCity=#{SCity}
    </select>
    <insert id="insertScenic" useGeneratedKeys="true" keyProperty="SId"
            keyColumn="SId" parameterType="com.travel.travel.entity.scenic">
        INSERT INTO
        scenic(SName,SCity,SDes,SPic)
        VALUES
        (#{SName},#{SCity},#{SDes},#{SPic})
    </insert>
    <update id="updateScenic" parameterType="com.travel.travel.entity.scenic">
        update scenic
        <set>
            <if test="SName!=null">SName=#{SName},</if>
            <if test="SCity!=null">SCity=#{SCity},</if>
            <if test="SDes!=null">SDes=#{SDes},</if>
            <if test="SPic!=null">SPic=#{SPic},</if>
        </set>
        where SId=#{SId}
    </update>
    <delete id="deleteTravelNote">
        delete from
        scenic
        where
        SId=#{SId}
    </delete>
</mapper>